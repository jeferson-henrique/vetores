#include <stdio.h>

int main(){

float valor[4];

printf("\n\tInsira o salario atual do funcionario: ");
scanf("%f", &valor[0]);

printf("\n\tInsira o percentual de reajuste: ");
scanf("%f", &valor[1]);

valor[2] = valor[1]*valor[0]/100;
valor[3] = valor[2]+valor[0];

printf("\n\tO salario novo e de: %.3f", valor[3]);

}
